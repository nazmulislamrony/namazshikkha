<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

    <Button
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:id="@+id/cancel_download_dialog"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txt_prepare_download"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/solaiman_lipi"
        android:text="ডাউনলোড হচ্ছে..."
        android:padding="5dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textColor"
        />

    <SeekBar
        android:id="@+id/seekbar_downloading"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_gravity="center"
        android:padding="10dp"
        android:maxHeight="50dp"
        android:splitTrack="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/txt_percentage_of_download"
        android:textColor="@color/textColor"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0%"/>


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/txt_current_total_verse"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        android:text=""/>


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/txt_no_internet_connection"
        android:textColor="@color/textColor"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="No internet connection available!!!"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
