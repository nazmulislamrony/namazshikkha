<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/initialize_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/solaiman_lipi"
        android:gravity="center"
        android:padding="5dp"
        android:text="আল ফাতিহা সূরার তেলাওয়াত শুনার জন্য শুধুমাত্র প্রথমবারের জন্য অডিও ফাইল ডাউনলোড হবে।"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_remaining_download"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/solaiman_lipi"
        android:textSize="16sp"
        android:text="৫ টি আয়াত ডাউনলোড হবে"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel_download"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:text="বন্ধ"
            android:fontFamily="@font/solaiman_lipi"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn_ok_download"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:fontFamily="@font/solaiman_lipi"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="ডাউনলোড"
            android:textSize="16sp"
            />

    </LinearLayout>
</LinearLayout>