<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.namazshikkha.ContentReader.TwelveContentReader">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/appbarcolor"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.DarkMode"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_height="wrap_content"
            android:id="@+id/back_arrow"
            app:tint="@color/appbartextColor" />


        <TextView
            android:id="@+id/tooltext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/solaiman_lipi"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:text="আল্লাহর ৯৯ নাম অর্থসহ ও ফজিলত"
            android:textColor="@color/appbartextColor"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/imgeLinear">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:id="@+id/firstTwelve"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secondTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thirdTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fourthTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fifthTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sixthTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seventhTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eightTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ninthTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenthTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elevenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twelveTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thirteenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fourteenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fiftheenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sixteenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seventeenTwelve"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>