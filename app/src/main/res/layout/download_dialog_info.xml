<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

    <Button
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:id="@+id/cancel_download_dialog"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_cancel_24"/>

    <TextView
        android:id="@+id/txt_prepare_download"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Preparaing..."
        android:padding="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/txt_percentage_of_download"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0%"/>

<!--    <SeekBar-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@null"-->
<!--        android:layout_gravity="center"-->
<!--        android:padding="10dp"-->
<!--        android:visibility="gone"-->
<!--        android:maxHeight="50dp"-->
<!--        android:splitTrack="false" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        >

    <com.google.android.material.progressindicator.CircularProgressIndicator
        app:indicatorColor="@color/colorPrimaryDark"
        app:trackColor="@color/bodyTextColor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:id="@+id/seekbar_downloading"
        app:indicatorSize="100dp"

        />
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/txt_current_total_verse"
        android:layout_gravity="center"
        android:text=""/>


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/txt_no_internet_connection"
        android:layout_height="wrap_content"
        android:text="No internet connection available!!!"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="STOP"
            android:textSize="15sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#fff"
            />



        <Button
            android:id="@+id/btn_exit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="EXIT"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>